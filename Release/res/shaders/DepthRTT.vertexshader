#version 330 core

// This is the input data.
layout(location = 0) in vec3 position;

// This is the depth matrix, which does not change for the entire mesh.
uniform mat4 depthMVP;

// This is main(), which simply calculates position.
void main(){
	gl_Position =  depthMVP * vec4(position,1);
}

